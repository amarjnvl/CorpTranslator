{
    "manifest_version": 3,
    "name": "CorpTranslator",
    "version": "1.0",
    "description": "Translate your raw thoughts into professional corporate speak.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon128.png",
            "48": "icons/icon128.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}